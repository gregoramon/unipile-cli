{
  "name": "unipile-cli",
  "version": "0.1.0",
  "description": "Headless-safe Unipile CLI with optional QMD-assisted contact resolution",
  "type": "module",
  "bin": {
    "unipile": "dist/index.js"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "coderabbit:status": "HOME=\"${CODERABBIT_HOME_DIR:-$HOME}\" coderabbit auth status",
    "coderabbit:review": "HOME=\"${CODERABBIT_HOME_DIR:-$HOME}\" coderabbit review --plain --type uncommitted --cwd $PWD"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  }
}
